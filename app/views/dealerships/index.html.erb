<h1>All Dealerships</h1>

<% @dealerships.each do |dealership| %>
  <% if params[:sort].nil? %>
    <h4><a href="/dealerships/<%= dealership.id %>"><%= dealership.name %></a>, <font size="-1"><a href="/dealerships/<%= dealership.id %>/edit">Update Dealership</a>, <a href="/dealerships/<%= dealership.id %>/delete">Delete Dealership</a> <%= dealership.created_at %></h4></font>
  <% else %>
    <h4><a href="/dealerships/<%= dealership.id %>"><%= dealership.name %></a>, <font size="-1"> Total Cars: <%= dealership.count %>, <a href="/dealerships/<%= dealership.id %>/edit">Update Dealership</a>, <a href="/dealerships/<%= dealership.id %>/delete">Delete Dealership</a> <%= dealership.created_at %></h4></font>
  <% end %>
<% end %>

