<a href="/dealerships">Dealership Index</a> &nbsp&nbsp&nbsp&nbsp&nbsp <a href="/cars">Car Index</a>

<% @cars.each do |car| %>
  <h4><a href="/cars/<%= car.id %>"><%= car.year %> <%= car.make %> <%= car.model %></a>, <font size="-1"><a href="/cars/<%= car.id %>/edit">Update Car</a>, <a href="/cars/<%= car.id %>/delete">Delete Car</a></font></h4>
  <p><%= car.year %> <%= car.make %>, <%= car.model %> <%= car.miles %> miles, ev: <%= car.ev %> </p>
  <p> created at: <%= car.created_at %>, updated at: <%= car.updated_at %></p>
<% end %>

<form action="/dealerships/<%= @dealership.id %>/cars" method="get">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p> Cars above miles: </p>
  <input type='number' id='filter' name='miles_filter'/><br/>
  <input type='submit' input value='Submit'/>
</form>

<a href="/dealerships/<%= @dealership.id %>/cars/alphabetized"> Alphabetical Order</a>

